<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioBoxTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/titleText</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/titleGray</item>
    </style>

    <style name="RadioBox" parent="Widget.AppCompat.PopupWindow">
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/boxGray</item>
    </style>
</resources>
